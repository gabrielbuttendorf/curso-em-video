Algoritmo "Exercicio_47"

Var
   contador, soma: inteiro
Inicio
   contador <- 500
   enquanto (contador >= 0) faca
      escreva(contador)
      soma <- soma + contador
      contador <- contador - 50
   fimEnquanto
   escreval("")
   escreval("")
   escreval(" A soma de todos esses números é", soma)
Fimalgoritmo
