Algoritmo "Exercicio_20"

Var
   numero: inteiro
Inicio
   escreval("----------------------------")
   escreval("VERIFICADOR DE PAR OU ÍMPAR")
   escreval("----------------------------")
   
   escreva("Digite um número: ")
   leia(numero)
   
   se(numero%2 = 0) entao
      escreval(numero," É PAR.")
   senao entao
      escreval(numero," É ÍMPAR.")
   fimSe
Fimalgoritmo